#!/usr/bin/env node

'use strict';

// Internal libs.
var cli = require('../lib/cli');
var info = require('../lib/info');

if (cli.args.v) {
  info.version();
  process.exit();
}

if (cli.args.h) {
  info.help();
  process.exit();
}

cli.exec(function(results){
  console.log('Reports for ' + results.files.length + ' files written to directory "' + results.output + '"');

  console.log('Done!');
});
